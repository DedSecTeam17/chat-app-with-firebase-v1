<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradinet"
    tools:context="com.example.mohamed.chatapp.StatusActivity">


    <include layout="@layout/main_tool_bar"
        android:id="@+id/status_tb" />

    <EditText
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_tb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/input_style"
        android:ems="10"
        android:hint="@string/email_hint"
        android:layout_margin="20dp"
        android:inputType="textEmailAddress"
        android:padding="11dp"
        android:textColor="@color/txt_color"
        android:textColorHint="@color/txt_color" />

    <Button
        android:id="@+id/status_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_input"
        android:layout_margin="20dp"

        android:layout_marginTop="183dp"
        android:background="@drawable/btn_style"
        android:text="@string/status_save_change"
        android:textColor="@color/txt_color" />


</RelativeLayout>
