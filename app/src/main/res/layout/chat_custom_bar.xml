<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/custom_user_image"
        android:text="@string/custom_bar_title"
        android:textColor="@color/txt_color"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_lseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_user_image"
        android:layout_alignStart="@+id/custom_title"
        android:text="TextView"
        android:textColor="@color/txt_color" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_user_image"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:src="@drawable/avator" />

</RelativeLayout>